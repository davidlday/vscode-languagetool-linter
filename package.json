    "eslint-plugin-jsdoc": "^39.6.2",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-license-plugin": "^4.2.1"
  },
