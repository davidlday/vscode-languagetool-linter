    "tslint": "^5.20.0",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "@types/request-promise-native": "^1.0.17",
    "annotatedtext-rehype": "^0.1.0",
    "annotatedtext-remark": "^0.1.0",
    "execa": "^2.0.5",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  }
}
