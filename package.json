          ]
        },
        "languageToolLinter.languageTool.motherTongue": {
          "type": "string",
          "default": "",
          "description": "A language code of the user's native language, enabling false friends checks for some language pairs.",
          "enum": [
            "",
            "ast-ES",
            "be-BY",
            "br-FR",
            "ca-ES",
            "ca-ES-valencia",
            "zh-CN",
            "da-DK",
            "nl",
            "en",
